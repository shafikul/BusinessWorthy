<div class="container">
  <div class="col-lg-offset-3 col-lg-6">
    <%= form_for(@global_goal, :html => {:multipart => true}) do |f| %>
        <% if @global_goal.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@global_goal.errors.count, "error") %> prohibited this global_goal from being
                saved:</h2>
              <ul>
                <% @global_goal.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="field">
          <!--<select name="post[person_id]">-->
            <!--<option value="">Select Person</option>-->
            <!--<option value="1">David</option>-->
            <!--<option value="2">Sam</option>-->
            <!--<option value="3">Tobias</option>-->
          <!--</select>-->
          <%= f.label :impact_criteria %><br>
          <%= f.number_field :impact_criteria, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :org_name %><br>
          <%= f.text_field :org_name, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :org_title %><br>
          <%= f.text_field :org_title, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :what_is_doing %><br>
          <%= f.text_area :what_is_doing, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :why_doing %><br>
          <%= f.text_area :why_doing, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :impact %><br>
          <%= f.text_area :impact, class: 'form-control' %>
        </div>
        <div class="picture">
          <%= f.label :image %><br>
          <%= f.file_field :image_link, class: 'btn btn-primary btn-lg' %><br/>
        </div>
        <div class="actions">
          <%= f.submit "Update", class: 'btn btn-primary btn-lg'  %>
        </div>

    <% end %>
  </div>
</div>
