<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= image_tag @global_goal.image_link.big_thumb.url if @global_goal.image_link.present?%>
      <p> Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
    </div>
    <div class="col-lg-9">
      <h2><strong><%= @global_goal.name %></strong></h2>
      <p><%= @global_goal.org_name%> , <%= @global_goal.org_title %></p>
      <h2>
        <strong>What is your company doing? </strong></h2>
       <p> <%= @global_goal.what_is_doing %>
      </p>
      <h2><strong>Why are you doing it?</strong></h2>
       <p> <%= @global_goal.why_doing %>
      </p>
      <h2>
      <strong>What is the impact? </strong></h2>
      <p> <%= @global_goal.impact %> </p>
    </div>
  </div>
  <section class="business-banner">
    <div class="container">
      <div class="row business-banner-first-block">
        <div class="col-sm-3 banner-map-col">
          <%= image_tag("map.png", class: "img-responsive", alt: "World Map") %>
        </div>
        <div class="col-sm-9">
          <ul class="countdown-block pull-left">
            <li><span>0</span></li>
            <li><span>0</span></li>
            <li><span>2</span></li>
            <li><span>4</span></li>
            <li><span>8</span></li>
            <li><span>0</span></li>
          </ul>
          <p class="pull-left">Business Leaders made the pladge</p>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-5 business-worthy-text-col">
          <h2>Are <span>You</span> #BusinessWorthy?</h2>
          <p>Make the Pladge</p>
        </div>
        <div class="col-sm-6 col-sm-offset-1 global-goals-text">
          <p class="pull-left">The Global Goals are my business too</p>
          <%= button_to 'commit',commit_path, class: "btn btn-primary commit-btn", method: 'get' %>
        </div>
      </div>
    </div>
  </section>


  <div class="row middle-section">
    <div class="col-lg-12">
      <% @global_goals.each do |global| %>
          <%= link_to((image_tag global.image_link.big_thumb.url if global.image_link.present?) ,global_goal_path(global) , class: "avatar-image" )%>
      <% end %>
    </div>
  </div>
</div>
