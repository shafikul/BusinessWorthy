<p id="notice"><%= notice %></p>

<h1>Global Goals</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Org. Name</th>
      <th>Title</th>
      <th>What is doing</th>
      <th>Why doing</th>
      <th>Impact</th>
      <th>Image</th>
      <th>Impact criteria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @global_goals.each do |global_goal| %>
      <tr>
        <td><%= global_goal.name %></td>
        <td><%= global_goal.org_name %></td>
        <td><%= global_goal.org_title %></td>
        <td><%= global_goal.what_is_doing %></td>
        <td><%= global_goal.why_doing %></td>
        <td><%= global_goal.impact %></td>
        <td><%= image_tag global_goal.image_link.big_thumb.url if global_goal.image_link.present? %></td>
        <td><%= global_goal.impact_criteria %></td>
        <td><%= link_to 'Show', global_goal %>  </td>
        <td><%= link_to 'Edit', edit_global_goal_path(global_goal) %></td>
        <td><%= link_to 'Destroy', global_goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create/Update', new_global_goal_path %>

